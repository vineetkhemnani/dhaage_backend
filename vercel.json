{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ],

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://threads-backend-2lcn.onrender.com/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
